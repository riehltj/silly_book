<%= turbo_stream.append "catalogs" do %>
  <%= render partial: "catalogs/catalog", collection: @catalogs %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: catalogs_path(page: @pagy.next, format: :turbo_stream, q: params[:q]&.to_unsafe_h), loading: :lazy %>
  <% end %>
<% end %>
